<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/addToFireStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add data to fire store"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/getFromFireStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get data from fire store"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/sampleImage"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/h" />

        <Button
            android:id="@+id/uploadImageWithData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image With Data"
            android:textAllCaps="false" />

    </LinearLayout>
</layout>